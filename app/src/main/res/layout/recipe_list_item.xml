<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_recipe_card_view">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_recipe_card_view">

        <TextView
            android:id="@+id/tv_recipe_item_recipe_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/RecipeItemNameTextViewStyle"
            tools:text="Nutella Pie" />

        <TextView
            android:id="@+id/tv_recipe_item_recipe_servings"
            app:layout_constraintStart_toStartOf="@+id/tv_recipe_item_recipe_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_recipe_item_recipe_name"
            style="@style/RecipeItemServingsTextViewStyle"
            tools:text="Servings: 8" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>