<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.RecipeDetailListFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_recipe_detail_image"
                style="@style/RecipeDetailImageViewStyle"
                android:contentDescription="@string/recipe_image_content_description"
                android:src="@drawable/ingredients" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_recipe_detail_ingredient_list"
                style="@style/RecipeDetailRecyclerViewStyle" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_recipe_detail_step_list"
        style="@style/RecipeDetailRecyclerViewStyle" />

</LinearLayout>