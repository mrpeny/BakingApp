<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="step"
            type="eu.captaincode.bakingapp.model.Step" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.StepDetailFragment">

        <com.google.android.exoplayer2.ui.SimpleExoPlayerView
            android:id="@+id/exoplayer_step_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_step_detail_video_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{step.videoUrl}" />

        <TextView
            android:id="@+id/tv_step_detail_detail_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{step.description}" />

        <TextView
            android:id="@+id/tv_step_detail_thumbnail_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{step.thumbnailUrl}" />

    </LinearLayout>
</layout>