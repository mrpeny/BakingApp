<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp" >

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">

        <ImageView
            android:id="@+id/iv_step_item_thumbnail"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/step_item_thumbnail_content_description"
            android:src="@drawable/ic_cake_vector"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_step_item_short_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@id/iv_step_item_thumbnail"
            app:layout_constraintStart_toEndOf="@id/iv_step_item_thumbnail"
            app:layout_constraintTop_toTopOf="@id/iv_step_item_thumbnail"
            tools:text="0. Recipe Introductions" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>